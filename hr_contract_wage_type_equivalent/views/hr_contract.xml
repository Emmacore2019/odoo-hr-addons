<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_contract_form" model="ir.ui.view">
        <field name="name">HR Contract: add equivalent wage</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract_wage_type.hr_contract_form_with_wage_type"/>
        <field name="arch" type="xml">
            <div name="wage" position="after">
                <label for="equivalent_wage"/>
                <div class="o_row" name="equivalent_wage">
                    <field name="equivalent_wage" nolabel="1"/>
                    <span>/</span>
                    <field name="equivalent_wage_type" nolabel="1"/>
                </div>
            </div>
        </field>
    </record>

</odoo>
